@model IEnumerable<SuiteProducts.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>
<h3>Showing the latest @Model.Count() products</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var product in Model)
{
    @Html.Partial("_Product", product);
}

@section featured{

    <h2>Featured Item:</h2>
    <p>@Model.First().Product_Name</p>
}

